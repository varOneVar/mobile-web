.flex {
  display flex
}
.flex1 {
  flex 1
}

.flex-column {
  flex-direction column
}

.flex-wrap {
  flex-wrap wrap  
}

.flex-align-center {
  @extend .flex
  align-items center
}

.flex-sb-center {
  @extend .flex-align-center
  justify-content space-between
}

.flex-sa-center {
  @extend .flex-align-center
  justify-content space-around
}

.flex-center {
  @extend .flex-align-center
  justify-content center
}


.bold {
  font-weight bold  
}

.thin {
  font-weight 500
}

.text-center {
  text-align center
}
.text-justify {
  text-align justify
  margin-top: 0.4em;
  line-height: 0; // 去掉after空白幽灵节点
  &:after {
    content ''
    width 100%
    height 0
    margin 0
    font-size 0
    display inline-block
    overflow hidden
  }
}

for num in 12 13 14 16 18 20 22 24
  .f{num} {
    font-size (num / 16) * 1rem
  }
